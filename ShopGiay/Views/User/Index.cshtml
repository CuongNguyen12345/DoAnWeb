@model IEnumerable<ShopGiay.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .product-item {
        background-color: #00B7FF;
        color: #fff;
        padding: 14px;
        border-radius: 7px;
    }
</style>

<section class="shop container">

    <h2 class="section-title"> Sản phẩm </h2>
    <div class="shop-content style1">
        @foreach (var item in Model)
