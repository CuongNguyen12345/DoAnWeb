                <a href="@Url.Action("ChiTietSanPham","User", new { id=item.MaGiay })">
                    <img src="~/Images/@item.AnhBia" class="product-img" />
                    <span class="price">@item.GiaBan đ</span>
                    <div class="caption">
                        <h4 style="min-height:70px;">
                            @item.TenGiay
                        </h4>

                    </div>
                </a>
                <div style="display:flex; justify-content: center;">
                    <a href="@Url.Action("ThemGioHang","GioHang", new { id = item.MaGiay, url = Request.Url.ToString() })" class="product-item" role="button">
                        Thêm vào Giỏ Hàng
                    </a>

                </div>
            </div>
            
