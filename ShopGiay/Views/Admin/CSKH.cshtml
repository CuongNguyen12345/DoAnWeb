@model IEnumerable<ShopGiay.Models.TINNHAN>

@{
    ViewBag.Title = "CSKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">Quản lý tin nhắn</h2>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Danh sách cuộc hội thoại</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Tin nhắn gần nhất</th>
                                    <th>Thời gian</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.KHACHHANG.HoTen</td>
                                        <td>@item.NoiDung</td>
                                        <td>@item.ThoiGianGui.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @Html.ActionLink("Xem chi tiết", "ChatDetail", new { maKH = item.MaKH }, new { @class = "btn btn-primary btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>