
@{
    ViewBag.Title = "QuanLySanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">

            <h4 class="page-title">General Elements</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Tìm kiếm sản phẩm</h4>
                <br>
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label" for="simpleinput">Tên sản phẩm</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="simpleinput">
                        </div>
                        <label class="col-lg-2 col-form-label" for="simpleinput">Loại sản phẩm</label>
                        <div class="col-lg-4">
                            <select name="" id="" class="form-control">
                                <option value="">--Chọn loại sản phẩm--</option>
                                @*<option value="">Chăm sóc da</option>
                                <option value="">Sữa rửa mặt</option>
                                <option value="">Chăm sóc tóc</option>*@
                            </select>
                        </div>
                    </div>



                </form>

                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label" for="simpleinput">Giá cả từ</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" id="simpleinput">
                        </div>
                        <label class="col-lg-2 col-form-label" for="simpleinput">Giá cả đến</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" id="simpleinput">
                        </div>
                    </div>
                </form>
                <div class="button-list">
                    <a href="../Admin/ThemSanPham.html" class="btn btn-warning float-right" title="Thêm sản phẩm">
                        <i class="fe-plus"></i>
                    </a>

                    <button type="button" class="btn btn-success float-right" title="Tìm kiếm sản phẩm">
                        <i class="fe-search"></i>
                    </button>

                </div>


            </div> <!-- end card-box -->
        </div> <!-- end card-->
    </div><!-- end col -->
</div>

