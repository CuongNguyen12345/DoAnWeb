    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>Tên sản phẩm</th>
            <th>Hạn sử dụng</th>
            <th>Giá cả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Sữa rửa mặt dạng gel</td>
