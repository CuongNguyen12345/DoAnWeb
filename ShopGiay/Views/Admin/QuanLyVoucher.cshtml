@model IEnumerable<ShopGiay.Models.KHUYENMAI>
@{
    ViewBag.Title = "QuanLyVoucher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var soTT = 1;
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">

            <h4 class="page-title">Quản lý voucher</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Tìm kiếm voucher</h4>
                <br>

                @using (Html.BeginForm("QuanLyVoucher", "Admin", FormMethod.Get))
                {
                    <div class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-lg-2 col-form-label" for="simpleinput">Mã Khuyến Mãi</label>
                            <div class="col-lg-4">
                                <input type="text" class="form-control" name="TenSP" value="@Request["TenSP"]">
                            </div>
                            
                        </div>

                    </div>

               

           
                    <div class="button-list">
                        <a href="@Url.Action("ThemVoucher", "Admin")" class="btn btn-warning float-right" title="Thêm khuyến mãi">
                            <i class="fe-plus"></i>
                        </a>

                        <button type="submit" class="btn btn-success float-right" title="Tìm kiếm khuyến mãi">
                            <i class="fe-search"></i>
                        </button>

                    </div>
                }



            </div> <!-- end card-box -->
        </div> <!-- end card-->
    </div><!-- end col -->
</div>

<table class="table mb-0">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>Mã Khuyến Mãi</th>
            <th>Phần Trăm Giảm</th>
            <th>Ngày Bắt Đầu</th>
            <th>Ngày Kết Thúc</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@soTT</th>
                <td>@item.TenKM</td>
                <td>@item.PhanTramGiam</td>
                <td>@String.Format("{0:dd/MM/yyyy}", item.NgayBatDau)</td>
                <td>@String.Format("{0:dd/MM/yyyy}", item.NgayKetThuc)</td>
                <td>
                    <a href="@Url.Action("SuaMaKhuyenMai", "Admin", new {MaSP = item.MaKM})" class="btn btn-primary btn-sm" title="Sửa sản phẩm">
                        <i class="fe-edit-1"></i>
                    </a>
                    <a href="@Url.Action("XoaMaKhuyenMai", "Admin", new {MaSP = @item.MaKM})" class="btn btn-danger btn-sm" title="Xóa sản phẩm">
                        <i class="fe-trash-2"></i>
                    </a>
                </td>
            </tr>


            soTT++;
        }

    </tbody>
</table>

