@model IEnumerable<ShopGiay.Models.TINNHAN>

<div id="chat-container" class="chat-container">
    <div class="chat-header">
        <h3>Hỗ trợ khách hàng</h3>
        <button id="minimize-chat" class="minimize-button">_</button>
    </div>

    <div id="chat-messages" class="chat-messages">
        @foreach (var message in Model)
        {
            <div class="message @(message.MaQL.HasValue ? "admin" : "user")">
                <div class="message-content">
                    @message.NoiDung
                </div>
                <div class="message-time">
                    @message.ThoiGianGui.ToString("HH:mm")
                </div>
            </div>
        }
    </div>

    <div class="chat-input">

        <input type="text" id="message-input" onclick="sendMessage()" name="noiDung" placeholder="Nhập tin nhắn..." />
        <button id="send-message" type="submit">Gửi</button>

    </div>
</div>

<style>
    .chat-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 300px;
        height: 400px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        z-index: 1000;
    }

    .chat-header {
        padding: 10px;
        background: #4CAF50;
        color: white;
        border-radius: 10px 10px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .minimize-button {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
    }

    .chat-messages {
        flex-grow: 1;
        overflow-y: auto;
        padding: 10px;
    }

    .message {
        margin: 5px 0;
        max-width: 80%;
        clear: both;
    }

        .message.user {
            float: right;
        }

        .message.admin {
            float: left;
        }

    .message-content {
        padding: 8px 12px;
        border-radius: 15px;
        background: #e9ecef;
        display: inline-block;
    }

    .message.user .message-content {
        background: #4CAF50;
        color: white;
    }

    .message-time {
        font-size: 0.8em;
        color: #666;
        margin-top: 2px;
    }

    .chat-input {
        padding: 10px;
        border-top: 1px solid #ddd;
        display: flex;
    }

    #message-input {
        flex-grow: 1;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 5px;
    }

    #send-message {
        padding: 8px 15px;
        background: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        #send-message:hover {
            background: #45a049;
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
$(document).ready(function() {
    var lastMessageTime = new Date();
    var chatContainer = $("#chat-container");
var chatMessages = $("#chat-messages");
    var minimized = false;

    $("#minimize-chat").click(function() {
        if (minimized) {
            chatContainer.css("height", "400px");
            $(this).text("_");
        } else {
            chatContainer.css("height", "40px");
            $(this).text("□");
        }
        minimized = !minimized;
    });

    $("#send-message").click(sendMessage);

    $("#message-input").keypress(function(e) {
        if (e.which == 13) {
            sendMessage();
        }
    });

    function sendMessage() {
        var messageInput = $("#message-input");
        var message = messageInput.val().trim();

        if (message) {
            $.ajax({
                url: '@Url.Action("GuiTinNhan", "Chat")',
                type: 'POST',
                data: { noiDung: message },
                success: function(response) {
                    if (response.success) {
                        messageInput.val('');
                        appendMessage(message, true);
                        scrollToBottom();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi gửi tin nhắn');
                }
            });
        }
    }

    function appendMessage(content, isUser) {
        var messageHtml =
            '<div class="message ' + (isUser ? 'user' : 'admin') + '">' +
            '<div class="message-content">' + content + '</div>' +
            '<div class="message-time">' + new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) + '</div>' +
            '</div>';
        chatMessages.append(messageHtml);
    }

    function scrollToBottom() {
        chatMessages.scrollTop(chatMessages[0].scrollHeight);
    }

    function checkNewMessages() {
        $.ajax({
            url: '@Url.Action("LayTinNhanMoi", "Chat")',
            type: 'GET',
            data: { lastMessageTime: lastMessageTime.toISOString() },
            success: function(response) {
                if (response.success && response.messages.length > 0) {
                    response.messages.forEach(function(message) {
                        appendMessage(message.NoiDung, message.MaQL === null);
                        lastMessageTime = new Date(message.ThoiGianGui);
                    });
                    scrollToBottom();
                }
            }
        });
    }

    setInterval(checkNewMessages, 5000);
    scrollToBottom();
});
</script>
